<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.css"/>
    

  </head>
  <body>
    
    <script src="api.js"></script>
    <div class="navbar">
      <div class="logo-container">
        <img class="logo" src="/images/logo.png" alt="Logo">
      </div>
      
      <div class="user-actions">
        <a href="/stops">Bus Stop</a>
        <a href="/bus_fares">Bus Fares</a>
        <a  href="/login">Log In</a>
        <a href="/signup">Sign Up</a>
      </div>
    </div>
  
    <div id="map">
      <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>
      <script src="https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.js"></script>
   <script src="map.js"></script>
   </div>

  <div class="Location">
    <p>Enter where you are and where you want to go below.</p><br>
    <div class="form">
      <div class="form1">
        <input class="Enter" type="text" id="location" name="location"> 
        <button class="btn" onclick="plotStartLocation()" type="submit"><i class="fas fa-search"></i> Locate Me</button>
      </div>

      <div class="form2">
        <input class="Enter" type="text" id="destination" name="destination">
        <button class="btn" onclick="plotDestination()" type="submit"><i class="fas fa-bus"></i> Find Me a Bus</button>
      </div>
    </div>

    <table id="recommendedRoutes">
      <script>    

        function displayRecommendedRoutes(recommendedRoutes) {
          const table = document.getElementById('recommendedRoutes');
          table.innerHTML = ''; // Clear existing data

          recommendedRoutes.forEach((route) => {
            const row = table.insertRow();
        
            const cell1 = row.insertCell(0);
            cell1.textContent = 'Recommended Route';
        
            const cell2 = row.insertCell(1);
            cell2.textContent = `${route.availableBus}`;
        
            const cell3 = row.insertCell(2);
            cell3.textContent = route.busRoutes.join('\n');
        
            const cell4 = row.insertCell(3);
            cell4.textContent = `Total Distance: ${route.totalDistance} km`;
          });
        }
        

      </script>
    </table>
  </div>

</body>
</html> 
 
